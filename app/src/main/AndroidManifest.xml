<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.tokyonth.mz">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mz"
        tools:targetApi="n">
        <activity
            android:name=".ui.activity.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Mz.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.PasswordActivity"
            android:theme="@style/Theme.Mz.NoActionBar" />
        <activity
            android:name=".ui.activity.DetailActivity"
            android:theme="@style/Theme.Mz.NoActionBar" />
        <activity
            android:name=".ui.activity.TagPictureActivity"
            android:theme="@style/Theme.Mz.NoActionBar" />
        <activity
            android:name=".ui.activity.AccurateSearchActivity"
            android:theme="@style/Theme.Mz.NoActionBar" />
        <activity
            android:name=".ui.activity.SearchActivity"
            android:theme="@style/Theme.Mz.NoActionBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.activity.PlayerActivity"
            android:theme="@style/Theme.Mz.NoActionBar" />
    </application>

</manifest>
